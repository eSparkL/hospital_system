<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shanzhu.hospital.mapper.NewsMapper">

    <!-- 获取置顶资讯 -->
    <select id="selectTopNews" resultType="com.shanzhu.hospital.entity.po.News">
        SELECT * FROM news
        WHERE status = 1 AND is_top = 1
        ORDER BY publish_time DESC
            LIMIT #{limit}
    </select>

    <!-- 获取最新资讯 -->
    <select id="selectLatestNews" resultType="com.shanzhu.hospital.entity.po.News">
        SELECT * FROM news
        WHERE status = 1
        ORDER BY publish_time DESC
            LIMIT #{limit}
    </select>

</mapper>